#!/usr/bin/env bash
set -euf -o pipefail
factory_install_libexec_dir="$("$(dirname "$0")/pkg-nixos-factory-install-get-libexec-dir")"


list_all_modules() {
  find "$($script_dir/pkg-nixos-factory-install-get-libexec-dir)" -mindepth 1 -maxdepth 1 -name '*.sh'
}


# Source all modules.
for m in $(list_all_modules); do
  echo "Sourcing module '$m'"
  . "$m"
done


factory_install_repo_root_dir=$(get_factory_install_repo_root_dir)
echo "factory_install_repo_root_dir=\"$factory_install_repo_root_dir\""

factory_install_repo_parent_dir=$(get_factory_install_repo_parent_dir)
echo "factory_install_repo_parent_dir=\"$factory_install_repo_parent_dir\""

device_cfg_repo_root_dir=$(get_device_cfg_repo_root_dir)
echo "device_cfg_repo_root_dir=\"$device_cfg_repo_root_dir\""

