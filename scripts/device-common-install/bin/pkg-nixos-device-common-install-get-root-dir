#!/usr/bin/env bash
set -euf -o pipefail
if test -z ${PKG_NIXOS_DEVICE_COMMON_INSTALL_DEV_OVERRIDE_ROOT_DIR+x}; then
  default_pkg_dir="$(cd "$(dirname "$0")/.." > /dev/null && pwd)"
  pkg_root_dir="$default_pkg_dir"
else
  pkg_root_dir="$PKG_NIXOS_DEVICE_COMMON_INSTALL_DEV_OVERRIDE_ROOT_DIR"
fi
echo "$pkg_root_dir"
