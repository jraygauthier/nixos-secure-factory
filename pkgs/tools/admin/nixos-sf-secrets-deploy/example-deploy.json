{
  "rules": [
    {
      "target": "/root/.gnupg",
      "type": "pgp-gnupg-keyring",
      "sources": [ "./root/_gnupg/subkeys.gpg-keys.b64.gpg" ],
      "otrust-sources": [Â "./root/_gnupg/gpg-otrust.b64.gpg" ],
      "target-user": "root",
      "decrypt-gpg-homedir": "/home/other-user/.gnupg-alt",
      "decrypt-user": "other-user",
      "permission": {
        "mode": "0700"
      }
    },
    {
      "target": "/root/.ssh",
      "type": "mkdir",
      "permission": {
        "mode": "0700"
      }
    },
    {
      "target": "/root/.ssh/id_rsa",
      "type": "pgp-file",
      "source": "./root/_ssh/id_rsa.b64.gpg",
      "run-as-user": "root",
      "permission": {
        "mode": "0600"
      }
    },
    {
      "target": "/root/.ssh/id_rsa.pub",
      "type": "pgp-file",
      "source": "./root/_ssh/id_rsa.pub.b64.gpg",
      "run-as-user": "root",
      "permission": {
        "mode": "0644"
      }
    }
  ]
}
